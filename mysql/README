# Generate image with this command
sudo docker build -t mysql-auto .

https://platzi.com/tutoriales/1432-docker/3268-como-crear-un-contenedor-con-docker-mysql-y-persistir-la-informacion/

docker volume ls

1) #sudo docker volume prune
2) sudo docker volume create mysql-data-auto
3) sudo docker run -d --net dockerNet --ip 172.17.0.2 -p 33060:3306 --name mysql-auto -e MYSQL_ROOT_PASSWORD=password --mount src=mysql-data-auto,dst=/var/lib/mysql mysql-auto

sudo docker run -d -p 33060:3306 --name mysql-auto -e MYSQL_ROOT_PASSWORD=password --mount src=mysql-data-auto,dst=/var/lib/mysql mysql-auto

4) docker exec --user=root -it mysql-auto /bin/bash
5) docker exec -it mysql-auto mysql -p  <password>
6) create database magento;

----------- pasos en limpio ----------
docker volume rm mysql-data-auto
sudo docker volume create mysql-data-auto
sudo docker build -t mysql-auto .
sudo docker run -d -p 33060:3306 --name mysql-auto -e MYSQL_ROOT_PASSWORD=password --mount src=mysql-data-auto,dst=/var/lib/mysql mysql-auto
sudo docker exec -it mysql-auto mysql -p #password: password
create database magento;
